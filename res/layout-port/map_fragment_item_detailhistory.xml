<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="5px"
        android:layout_marginTop="10px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:text="@string/xuhao"
            android:textSize="25px" />

        <TextView
            android:id="@+id/name"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="@string/xingm"
            android:textSize="25px" />

        <TextView
            android:id="@+id/addr"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:text="@string/xxdd"
            android:textSize="25px" />

        <TextView
            android:id="@+id/time"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="25px" />

        <TextView
            android:id="@+id/isworking"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textSize="25px" />
    </LinearLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/shuaidaolist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_margin="10px"
        android:divider="@color/bg_color_deep"
        android:dividerHeight="1px" />
  

    <Spinner
        android:id="@+id/peopchoose"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="8px"
        android:background="@drawable/spinnershape"
        android:gravity="center_horizontal"
        android:textColor="@color/blue"
        android:textSize="25px" />

    <include
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/shuaidaolist"
        android:layout_margin="1px"
        layout="@layout/map_line" />

    <TextView
        android:id="@+id/haveornot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="暂无记录~"
        android:textColor="@color/blue"
        android:textSize="40px"
        android:visibility="gone" />

</RelativeLayout>
